{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "bin/**/*",
      "dist/**/*",
      "sdk/**/*",
      "sdk-debug/**/*"
    ]
  },
  "jsRules": {},
  "rules": {
    "no-floating-promises": true,
    "await-promise": true,
    "promise-function-async": true,
    "semicolon": [
      true,
      "always"
    ],
    "no-string-throw": true,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "quotemark": [
      false
    ],
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": [
      false
    ],
    "no-unused-variable": false,
    "no-string-literal": false,
    "trailing-comma": [
      false
    ],
    "object-literal-key-quotes": [
      false
    ],
    "variable-name": [
      false
    ],
    "member-ordering": [
      false
    ],
    "no-empty-interface": [
      false
    ],
    "no-empty": [
      false
    ],
    "class-name": false,
    "ordered-imports": [
      false
    ],
    "max-classes-per-file": false,
    "max-line-length": [
      false
    ],
    "forin": false,
    "no-console": [
      false
    ],
    "object-literal-shorthand": false,
    "whitespace": {
      "severity": "warning"
    },
    "eofline": false
  },
  "rulesDirectory": []
}
